########################################
# SneakDex Indexer Service .env template
# Rename to `.env` and set real values
########################################

# Kafka
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC_PARSED=parsed-pages
KAFKA_GROUP_ID=indexer-group

# Optional: Control how many docs to process
BATCH_SIZE=100
MAX_DOCS=10000  # set to empty or remove for unlimited

# Qdrant
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=your-qdrant-api-key
COLLECTION_NAME=sneakdex
COLLECTION_NAME_IMAGES=sneakdex-images

# Supabase / Postgres
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_API_KEY=your-supabase-api-key

# Monitoring
MONITOR_PORT=8080
